SPAM_PREFIXES = ["+4470", "+1202", "+1900"]  # Ã–rnek spam prefix'leri

# Ekran temizleme
def clear_screen():
    """Terminal ekranÄ±nÄ± temizler."""
    os.system('cls' if os.name == 'nt' else 'clear')

# YavaÅŸ yazdÄ±rma
def slow_print(text, delay=0.02, color=Fore.WHITE):
    """Metni yavaÅŸÃ§a yazdÄ±rÄ±r."""
    for char in text:
        print(f"{color}{char}{Style.RESET_ALL}", end='', flush=True)
        time.sleep(delay)
    print()

# HavalÄ± aÃ§Ä±lÄ±ÅŸ ekranÄ±
