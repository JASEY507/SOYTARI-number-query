}

SPAM_PREFIXES = ["+4470", "+1202", "+1900"] 

def clear_screen():
    os.system('cls' if os.name == 'nt' else 'clear')

def slow_print(text, delay=0.02, color=Fore.WHITE):
    for c in text:
        print(f"{color}{c}{Style.RESET_ALL}", end='', flush=True)
        time.sleep(delay)
    print()

def show_welcome():
    clear_screen()
    ascii_art = """
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘                                            â•‘
    â•‘   SoytariNumber - Numara Dedektifi ğŸ•µï¸â€â™‚ï¸   â•‘
    â•‘   Telefon NumaralarÄ±nÄ±n SÄ±rlarÄ±nÄ± Ã‡Ã¶z!     â•‘
    â•‘                                            â•‘
